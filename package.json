{
  "name": "universal-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "npx eslint .",
    "dev": "npx cross-env ENV=development nodemon -q",
    "build": "npx tsc && npx tsconfig-replace-paths -s ./src",
    "pre-start": "npx cross-env ENV=preproduction node build/main.js",
    "start": "npx cross-env ENV=production node dist/main.js",
    "deploy": "node ./scripts/deploy.js",
    "typeorm": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/constants/appDataSource.ts",
    "migration:generate": "npm run typeorm migration:generate ./src/migrations/migration",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "schema:sync": "npm run typeorm schema:sync",
    "schema:log": "npm run typeorm schema:log"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@fastify/type-provider-json-schema-to-ts": "^4.0.0",
    "ajv-errors": "^3.0.0",
    "awilix": "^11.0.0",
    "awilix-manager": "^5.5.0",
    "bcrypt": "^5.1.1",
    "chalk": "4.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "i18next": "^24.1.2",
    "i18next-http-middleware": "^3.7.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.8.4",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.5",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.20",
    "uuid": "^11.0.3",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express-serve-static-core": "^4.19.6",
    "@types/i18next": "^12.1.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.18.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  }
}
